{% autoescape "js" %}
<script type="text/javascript" id="hexo.headll">
(function () {
  window.addEventListener("load", function () {   //添加load事件
    $("body").click(function (e) {
        var a = new Array("富强", "民主", "文明", "和谐", "自由", "平等", "公正", "法治", "爱国", "敬业", "诚信", "友善");
        var a_idx=Math.floor(Math.random()*a.length);
        var $i = $("<span/>").text(a[a_idx]);
        var x = e.pageX,y = e.pageY;
        $i.css({
            "z-index": 999999999999999999999999999999999999999999999999999999999999999999999,
            "top": y - 20,
            "left": x,
            "position": "absolute",
            "font-weight": "bold",
            "color": "#ff6651"
        });
        $("body").append($i);
        $i.animate({
            "top": y - 180,
            "opacity": 0
        },
        1500,
        function () {
            $i.remove();
        });
    });
  }, false);
})();
</script>
{% endautoescape %}
